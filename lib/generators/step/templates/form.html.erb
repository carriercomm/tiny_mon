<% for attribute in attributes -%>
<div class="control-group">
  <%%= f.label :<%= attribute.name %>, t('.<%= attribute.name %>'), :class => 'control-label' %>
  <div class="controls">
    <%%= f.text_field :<%= attribute.name %> %>
    <p><small><%= t('.description') %></small></p>
  </div>
</div>
<% end -%>
