<%= form_for @search_filter, :url => url, :html => { :id => 'filter', :method => :get, :class => 'form-search' }, :remote => true do |f| %>
  <div class="input-group">
    <%= f.text_field :query, :size => 25, :class => 'auto-submit form-control input-sm pull-right', :style => "width: 150px;", :placeholder => "Search" %>
    <div class="input-group-btn">
      <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
    </div>
  </div>
<% end %>

<script>
  $(function() {
    $(".auto-submit").keyup(function() {
      $(this).parents("form").submit();
    });
  });
</script>
