<% title t('layouts.login') %>

<div class="box">
  <div class="box-body">
    <%= form_for @user_session, :url => login_path, :html => { :class => 'form-horizontal' } do |f| %>
      <%= f.error_messages :header_message => t('.could_not_login') %>

      <p>
        <%= f.label :email, t('.email'), :class => 'control-label' %>
        <%= f.email_field :email, :class => 'form-control' %>
      </p>

      <p>
        <%= f.label :password, t('.password'), :class => 'control-label' %>
        <%= f.password_field :password, :class => 'form-control' %>
      </p>

      <p>
        <%= f.check_box :remember_me, :class => '' %> <%= f.label :remember_me, t('.remember_me'), :class => 'control-label' %>
      </p>

      <p>
        <%= f.submit t('.login'), :class => 'btn btn-primary btn-small btn-flat' %>
        <%= link_to t('.forgot_password'), new_password_reset_path, :class => 'btn btn-default btn-small btn-flat' %>
        <%= link_to t('.register_instead'), new_user_path, :class => 'btn btn-default btn-small btn-flat' %>
      </p>
    <% end %>
  </div>
</div>
