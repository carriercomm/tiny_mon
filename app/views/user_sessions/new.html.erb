<h2><%= t('.login') %></h2>

<%= form_for @user_session, :url => login_path, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages :header_message => t('.could_not_login') %>
  <div class="control-group">
    <%= f.label :email, t('.email'), :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :password, t('.password'), :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :remember_me, t('.remember_me'), :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :remember_me %>
    </div>
  </div>
  
  <div class="control-group">
    <div class="controls">
      <%= f.submit t('.login'), :class => 'btn' %> | <%= link_to t('.forgot_password'), new_password_reset_path %> | <%= link_to t('.register_instead'), new_user_path %>
    </div>
  </div>
<% end %>
