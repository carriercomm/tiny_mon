<%= form_for @account, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages :header_message => t('.could_not_create_account') %>

  <p>
    <%= f.label :name, t('.name'), :class => 'control-label required' %>
    <%= f.text_field :name, :class => 'form-control' %>
    <small><%= t(".name_hint") %></small>
  </p>

  <p>
    <%= f.submit t('.save_account'), :class => 'btn btn-primary btn-small btn-flat' %>
  </p>
<% end %>
