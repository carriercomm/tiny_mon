<h2><%= t('.account', :account => @account.name) %></h2>

<dl>
  <dt><%= t('.name') %></dt>
  <dd><%= @account.name %></dd>
  
  <dt><%= t('.users', :count => @account.users.count) %></dt>
  <dd>
    <% if @account.users.empty? %>
      <%= t('.no_users') %>
    <% else %>
      <ul>
        <% @account.users.each do |user| %>
          <li><%= link_to user.full_name, user_path(user) %> (<%= t("account.role.#{user.user_account_for(@account).role}") %>)</li>
        <% end %>
      </ul>
    <% end %>
  </dd>
  
  <dt><%= t('.statistics') %></dt>
  <dd>
    <ul>
      <li><%= t('.sites_count', :count => @account.sites.count) %></li>
      <li><%= t('.health_checks_count', :count => @account.health_checks.count) %></li>
      <li><%= t('.check_runs_count', :count => @account.check_runs.count) %></li>
      <li><%= t('.comments_count', :count => @account.comments.count) %></li>
    </ul>
  </dd>
</dl>
