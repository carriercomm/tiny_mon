<h2><%= t(".imports_for_site", :site => @site.name) %></h2>

<% if @health_check_imports.empty? %>
  <p><%= t(".nothing_found") %></p>
<% else %>
  <table class="list">
    <thead>
      <tr>
        <th><%= t(".who") %></th>
        <th><%= t(".when") %></th>
        <th><%= t(".description") %></th>
        <th><%= t(".options") %></th>
      </tr>
    </thead>
    <tbody>
      <% @health_check_imports.each do |health_check_import| %>
        <tr>
          <td><%= link_to health_check_import.user.full_name, user_path(health_check_import.user) %></td>
          <td><%= t(".imported_at", :time => time_ago_in_words(health_check_import.created_at)) %></td>
          <td><%= health_check_import.description %></td>
          <td><%= link_to t('.delete'), account_site_health_check_import_path(@account, @site, health_check_import), :method => :delete, :confirm => t(".really_delete_import") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
