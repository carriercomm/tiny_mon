<h2><%= t(".choose_template") %></h2>

<% tabs(:selected => (params[:filter] || :all).to_sym) do |a| %>
  <% a.tab :mine, t(".my_templates"), new_account_site_health_check_import_path(@account, @site, :template => 'select', :filter => 'mine') %>
  <% a.tab :account, t(".account_templates"), new_account_site_health_check_import_path(@account, @site, :template => 'select', :filter => 'account') %>
  <% a.tab :public, t(".public_templates"), new_account_site_health_check_import_path(@account, @site, :template => 'select', :filter => 'public') %>
  <% a.tab :all, t(".all_templates"), new_account_site_health_check_import_path(@account, @site, :template => 'select', :filter => 'all') %>
<% end %>

<% if @health_check_templates.empty? %>
  <p><%= t(".no_templates_found") %></p>
<% else %>
  <%= will_paginate @health_check_templates %>
  
  <ul class="asterisk">
    <% @health_check_templates.each do |template| %>
      <li>
        <%= link_to template.name, new_account_site_health_check_import_path(@account, @site, :template => template.id) %><br/>
        <%=h template.description %><br/>
        <%= t(".template_created_by", :user => link_to(template.user.full_name, user_path(template.user))) %>
      </li>
    <% end %>
  </ul>
  
  <%= will_paginate @health_check_templates %>
<% end %>

<p><%= link_to t(".create_template"), new_health_check_template_path %></p>
