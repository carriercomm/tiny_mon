<% if @sites.empty? %>
  <p><%= t('.no_sites_found') %></p>
<% else %>
  <table class="list">
    <thead>
      <tr>
        <th><%= t('.name') %></th>
        <th><%= t('.options') %></th>
      </tr>
    </thead>
    <tbody>
      <% @sites.each do |site| %>
        <tr>
          <td><%= link_to highlight(site.name, @search_filter.query), account_site_health_checks_path(site.account, site) %></td>
          <td>
            <%= link_to t('.edit'), edit_account_site_path(site.account, site) %> |
            <%= link_to t('.delete'), account_site_path(site.account, site), :method => :delete, :confirm => t('.confirm_delete') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
