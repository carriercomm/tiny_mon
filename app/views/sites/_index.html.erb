<% if @sites.empty? %>
  <p><%= t('.no_sites_found') %></p>
<% else %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t(".status") %></td>
        <th><%= t('.name') %></th>
        <% if current_user.can_edit_sites?(@account) %>
          <th><%= t('.options') %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @sites.each do |site| %>
        <tr class="<%= status_class(site) %>">
          <td><%= overall_status(site, :small) %></td>
          <td><%= link_to highlight(site.name, @search_filter.query), account_site_health_checks_path(site.account, site) %></td>
          <% if current_user.can_edit_sites?(@account) %>
            <td>
              <%= action_list do |a| %>
                <% a.link_to t('.edit'), edit_account_site_path(site.account, site) %>
                <% a.link_to t('.delete'), account_site_path(site.account, site), :method => :delete, :confirm => t('.confirm_delete') if current_user.can_delete_sites?(@account) %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
