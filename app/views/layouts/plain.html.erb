<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <title>TinyMon</title>
    <%= javascript_include_tag :defaults %>
    <%= stylesheet_link_tag 'style' %>
  </head>
  <body>
    <!-- header start -->
    <div id="header">
      <div class="corset">
        <!-- topheader start -->
        <div id="top_header" class="clearfix">
          <div id="logo">
            <h1><a href="/">TinyMon</a><sup>&beta;</sup></h1>
            <p><%= t('layouts.subtitle') %></p>
          </div>
          <div id="right_header">
          </div>
        </div>
        <!-- topheader end -->

        <!-- menu start -->
        <div id="menu">
          <ul>
            <li><a href="/" class="first"><%= t('layouts.home') %></a></li>
            <li><a href="/sites"><%= t('layouts.sites') %></a></li>
            <li><a href="/health_checks"><%= t('layouts.health_checks') %></a></li>
            <li class="help"><%= link_to t('layouts.help'), help_path, :method => :post %></li>
          </ul>
        </div>
      </div>
    </div>
    <!-- header end -->

    <!-- body start -->

    <div id="body">
      <div class="corset">
        <div id="canvas">
          <%= yield %>
        </div>
      </div>
    </div>
    <!-- body end -->

    <!-- footer start -->
    <div id="footer">
      <div class="corset">
        <div class="content">
          <div class="left">
            <a href="/"><%= t('layouts.home') %></a> | 
            <a href="/sites"><%= t('layouts.sites') %></a> |
            <a href="/health_checks"><%= t('layouts.health_checks') %></a>
          </div>
          <div class="right">
            <%= t('layouts.version', :version => TinyMon::Version.version, :revision => revision_link) %>
          </div>
        </div>
        <div class="content">
          <h1><%= t('layouts.quick_links') %></h1>
          <div id="links">
            <a href="http://github.com/tkadauke/tiny_mon"><%= t('layouts.github_project_page') %></a>
            <% FooterLink.ordered.each do |link| %>
              | <%= link_to link.text, link.url %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

