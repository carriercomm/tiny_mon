<% if logged_in? && current_user.accounts.empty? %>
  <p>
    <%= t('.no_accounts') %>
    <%= link_to t('.create_account'), new_account_path %>
  </p>
<% else %>
  <h2><%= t('.quick_links') %></h2>

  <ul class="asterisk">
    <li><%= link_to t('.add_site'), new_account_site_path(current_user.current_account) %></li>
    <li><%= link_to t('.settings'), settings_path %></li>
  </ul>

  <h2><%= t('.recent_activity') %></h2>

  <%= auto_update 'activity' %>
  <div id="activity">
    <%= render :partial => "/check_runs/activity" %>
  </div>
<% end %>
